    <div id="ReservationModal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg" role="content">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title"><strong>Reserve a Table</strong></h4>
                    <button type="button" class="close" style="color: floralwhite;" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-row">
                            <label class="col-sm-3 col-12"><strong>Number of Guests</strong></label>
                            <dd class="col-auto">
                                <input type="radio" id="1" name="number" value="1">
                                <label for="1"><strong>1</strong></label>
                                <input type="radio" id="2" name="number" value="2">
                                <label for="2"><strong>2</strong></label>
                                <input type="radio" id="3" name="number" value="3">
                                <label for="3"><strong>3</strong></label>
                                <input type="radio" id="4" name="number" value="4">
                                <label for="4"><strong>4</strong></label>
                                <input type="radio" id="5" name="number" value="5">
                                <label for="5"><strong>5</strong></label>
                                <input type="radio" id="6" name="number" value="More" onclick="addmore()">
                                <label for="6"><strong id="lab">More</strong></label>
                            </dd>
                        </div>
                        <div class="form-row">
                            <label class="col-12 col-sm-3"><strong>Section</strong></label>
                            <a type="radio" class="btn btn-success btn-sm">No-smoking</a>
                            <a type="radio" class="btn btn-danger btn-sm">Smoking</a>
                        </div>
                        <br>
                        <div class="form-row">
                            <label class="col-12 col-sm-3"><strong>Date and Time</strong></label>
                            <div class="row">
                                <div class="col-6 col-sm-6">
                                    <input type="date" class="form-control" id="date" name="date" placeholder="Date" required>
                                </div>
                                <div class="col-6 col-md-6">
                                    <input type="time" class="form-control" id="time" name="time" placeholder="Time" required>
                                </div>
                           </div>
                        </div>
                        <br>
                        <div class="form-row">
                            <button type="button" class="btn btn-secondary offset-4 offset-sm-3 btn-sm" data-dismiss="modal">
                                Cancel
                            </button>
                            <button type="submit" onclick="ty()" class="btn btn-primary btn-sm">
                                Reserve
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

