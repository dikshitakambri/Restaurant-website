<%- include('partials/header') %>
<br>
<br>
<!--LoginModal-->
<div id="sign-in" role="dialog">
    <div class="modal-dialog modal-md" role="content">
        <div class="modal-content content">
            <div class="modal-header">
                <h4 class="modal-title justify-content-center">Sign-Up</h4>
                <button type="button" class="close" style="color: floralwhite;" data-dismiss="modal"
                >&times;</button>
            </div>
            
            <div class="modal-body" id="validateForm"> 
                <form method="POST" action="/signup">
                <fieldset >
                    <div class="form-group">
                        <label class="col-md-12 control-label" for="textinput">
                            First Name
                        </label>
                        <div class="col-md-12">
                            <input id="firstname" name="firstname" type="string" 
                            autocomplete="off" placeholder="Enter Your First Name"
                            class="form-control input-md" required
                            value="<%= typeof firstname != 'undefined' ? firstname : ''   %>"    >
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12 control-label" for="textinput">
                            Last Name
                        </label>
                        <div class="col-md-12">
                            <input id="lasttname" name="lastname" type="string" 
                            autocomplete="off" placeholder="Enter Your Last Name"
                            class="form-control input-md" required
                            value="<%= typeof lastname != 'undefined' ? lastname : ''   %>" >
                        </div>
                    </div>
                    
                    <!-- Email input-->
                    <div class="form-group">
                        <label class="col-md-12 control-label" for="textinput">
                            Email
                        </label>
                        <div class="col-md-12">
                            <input id="email" name="email" 
                            type="email" autocomplete="off" 
                            placeholder="Enter your email address" 
                            class="form-control input-md" required 
                            value="<%= typeof email != 'undefined' ? email : ''   %>" >
                        </div>
                    </div>

                    <!-- Password -->
                    <div class="form-group">
                        <label class="col-md-12 control-label" for="passwordinput">
                            Password
                        </label>
                        <div class="col-md-12">
                            <input id="password" class="form-control input-md"
                            name="password" type="password" 
                            placeholder="Enter your password" required
                            value="<%= typeof password != 'undefined' ? password : ''   %>" >
                        </div>
                    </div>
                    <!--Confirm Password -->
                    <div class="form-group">
                        <label class="col-md-12 control-label" for="passwordinput">
                            Confirm Password
                        </label>
                        <div class="col-md-12">
                            <input id="password" class="form-control input-md"
                            name="confirmpassword" type="password" 
                            placeholder="Enter your password" required
                            value="<%= typeof confirmpassword != 'undefined' ? confirmpassword : ''   %>" >

                        </div>
                    </div>

                    <!-- Button-->

                    <div class="form-group">
                        <button type="submit" class="btn login-btn btn-block all-btn" style="color: white;">
                            Create Account
                        </button>    
                    </div>
                    <div class="ex-account text-center">
                        <p>Already have an account? Signin 
                            <a href="/login">here</a>
                        </p>
                        <div class="divider"></div>
                    </div>
                </fieldset>
            </form>
            </div>
        </div>
    </div>
</div>